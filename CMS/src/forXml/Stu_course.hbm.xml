<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping package="forXml">
    <class name="Stu_course" table="stu_course">
        <composite-id name="pkey" class="pkeyStu_course">
            <key-property name="course_no" column="course_no"></key-property>
            <key-property name="stu_id" column="stu_id"></key-property>
        </composite-id>
        <property name="grade" />
        <property name="tea_evaluation" />
    </class>
     
</hibernate-mapping>